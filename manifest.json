{
  "manifest_version": 3,
  "name": "CopyOne",
  "version": "1.0.2",
  "description": "A simple sidebar extension.",
  "permissions": ["sidePanel", "clipboardRead", "storage","tabs"],
  "action": {
    "default_icon": {
      "16": "icons/图标629x629.png",
      "48": "icons/图标629x629.png",
      "128": "icons/图标629x629.png"
    }
  },
  "icons": {
    "16": "icons/图标629x629.png",
    "48": "icons/图标629x629.png",
    "128": "icons/图标629x629.png"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "commands": {
    "toggle_sidebar": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z",
        "mac": "Command+Shift+Z",
        "chromeos": "Ctrl+Shift+Z",
        "linux": "Ctrl+Shift+Z",
        "windows": "Ctrl+Shift+Z"
      },
      "description": "展开侧边栏",
      "global": false
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "homepage_url": "https://github.com/shopkeeper2020/CopyOne",
  "privacy_policy": "https://github.com/shopkeeper2020/CopyOne"

}